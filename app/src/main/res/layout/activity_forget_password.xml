<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.ForgetPasswordActivity">

    <ImageView
        android:id="@+id/forgetPassword.image.logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_paye_nonslogan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgetPassword.image.logo"
        app:layout_constraintVertical_bias="0.05">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forget_password_title"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/DarkText"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/forgetPassword.edit.email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textSize="22sp"
            android:hint="@string/email"
            android:textColorHint="@color/HintText"
            android:textColor="@color/Primary900"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_email_blue"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/template_edit_white"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/forgetPassword.edit.username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="22sp"
            android:hint="@string/username"
            android:textColorHint="@color/HintText"
            android:textColor="@color/Primary900"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_user_blue"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/template_edit_white"
            android:padding="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/forgetPassword.button.confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/confirm"
            android:textSize="20sp"
            android:textColor="@color/LightText"
            android:layout_marginTop="20dp"
            android:background="@drawable/template_button_blue"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>