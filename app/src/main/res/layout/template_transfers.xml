<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/transfer.avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transfer.name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/quicksand_bold"
        android:paddingStart="2dp"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/transfer.avatar"
        app:layout_constraintTop_toTopOf="@+id/transfer.avatar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/transfer.username"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/template_edit_white"
        android:text="Loading..."
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/transfer.avatar"
        app:layout_constraintTop_toBottomOf="@+id/transfer.name" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="32dp"
        android:background="@color/HintText"
        app:layout_constraintTop_toBottomOf="@+id/transfer.avatar" />

    <TextView
        android:id="@+id/transfer.user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="You are transferring money to..."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:id="@+id/transfer.avatar2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transfer.user" />

    <TextView
        android:id="@+id/transfer.name2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/quicksand_bold"
        android:paddingStart="2dp"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/transfer.avatar2"
        app:layout_constraintTop_toTopOf="@+id/transfer.avatar2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/transfer.username2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/template_edit_white"
        android:text="Loading..."
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/transfer.avatar2"
        app:layout_constraintTop_toBottomOf="@+id/transfer.name2" />

    <EditText
        android:id="@+id/transfer.amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/template_edit_red"
        android:hint="Enter he amount"
        android:padding="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transfer.avatar2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/transfer.confirm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/template_addfriend"
        android:padding="10dp"
        android:text="Confirm"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transfer.amount" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="32dp"
        android:background="@color/HintText"
        app:layout_constraintTop_toBottomOf="@+id/transfer.confirm" />




</androidx.constraintlayout.widget.ConstraintLayout>